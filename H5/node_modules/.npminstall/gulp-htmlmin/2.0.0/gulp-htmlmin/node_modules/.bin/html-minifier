#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/node" ]; then
  "$basedir/node"  "$basedir/../../../../../html-minifier/2.1.7/html-minifier/cli.js" "$@"
  ret=$?
else 
  node  "$basedir/../../../../../html-minifier/2.1.7/html-minifier/cli.js" "$@"
  ret=$?
fi
exit $ret
